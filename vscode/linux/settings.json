{
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "editor.autoIndent": "full",
  "editor.cursorSurroundingLines": 5,
  "editor.formatOnSave": true,
  "editor.wordWrap": "off",
  "editor.fontFamily": "'MonoLisa', 'Droid Sans Mono', 'monospace', 'Noto Color Emoji'",
  // "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', 'Noto Color Emoji'",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.insertSpaces": false,
  "editor.fontSize": 16,
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.formatOnPaste": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.history": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.venv/**": true,
    "**/node_modules/*/**": true,
    "**/.history": true
  },
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.mergeEditor": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "python.analysis.autoSearchPaths": false,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "black",
  "python.analysis.indexing": true,
  "python.formatting.blackArgs": ["--line-length", "120"],
  "python.autoComplete.extraPaths": ["./src"],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.typeCheckingMode": "basic",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "python.languageServer": "Pylance",
  "python.analysis.extraPaths": ["./src"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "svelte.enable-ts-plugin": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.handleKeys": {
    "<C-f>": false
  },
  "vim.easymotionMarkerBackgroundColor": "#7e57c2",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "after": ["leader", "leader", "leader", "b", "d", "w"]
    }
  ],
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.leader": "<Space>",
  "vim.smartRelativeLine": true,
  "vscode-pets.theme": "forest",
  "workbench.productIconTheme": "material-product-icons",
  "window.restoreWindows": "all",
  "window.titleBarStyle": "custom",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.colorTheme": "Catppuccin",
  "workbench.startupEditor": "welcomePage",
  "remote.containers.defaultExtensions": [
    "eamodio.gitlens",
    "oderwat.indent-rainbow",
    "esbenp.prettier-vscode",
    "redhat.vscode-yaml",
    "coenraads.bracket-pair-colorizer"
  ],
  "remote.extensionKind": {
    "2gua.rainbow-brackets": ["workspace"],
    "aaron-bond.better-comments": ["workspace"],
    "coenraads.bracket-pair-colorizer": ["workspace"]
  },
  "macros": {
    "showTerminal": [
      "workbench.action.terminal.toggleTerminal",
      "workbench.action.terminal.focus"
    ],
    "hideTerminal": ["workbench.action.terminal.toggleTerminal"]
  },
  "[toml]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[makefile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll": true
    }
  },
  "[svelte]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": true
    }
  },
    "colorize.languages": [
    "python",
  ]
}
